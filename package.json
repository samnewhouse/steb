{
  "name": "steb",
  "version": "1.0.0",
  "description": "Stylus Typescript Extension Boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "stylus src/ -o dist/ && webpack --config webpack.config.js",
    "styles": "stylus src/ -o dist/",
    "watch:styles": "stylus src/ -o dist/ --watch",
    "watch:webpack": "webpack --config webpack.config.js -w",
    "watch": "rm -rf dist && npm-run-all -p watch:*"
  },
